{
  "_comment": "=== CONFIG DEFAULT - OPTIMIZED UNTUK PAMERAN ISSAT ===",
  
  "min_face_size": 100,
  "face_threshold": 0.5,
  "recognition_threshold": 0.7,
  "liveness_threshold": 0.5,
  "max_blur": -25.0,
  "max_angle": 10.0,
  "max_database_items": 2000,
  "show_landmarks": true,
  "show_legend": true,
  "enable_liveness": false,
  "enable_blur_filter": true,
  "auto_add_faces": false,
  "database_path": "face_database_mobilefacenet.json",
  "images_directory": "images",
  "use_arcface": true,
  "use_zscore_norm": true,
  "detection_frame_size": [320, 240],
  "quality_interval": 3,
  "max_faces_to_process": 2,
  "min_face_prob_threshold": 0.75,
  
  "_comment_robot_events": "=== ROBOT GREETING EVENTS (Pameran ISSAT) ===",
  "recognition_event_enabled": true,
  "recognition_event_cooldown": 5.0,
  "recognition_event_cooldown_by_name_only": true,
  "recognition_event_file": "temp/robot_events.jsonl",
  "recognition_event_append": true,
  "recognition_event_max_lines": 500,
  
  "_comment_face_lost": "=== FACE LOST TRACKING ===",
  "emit_face_lost_events": true,
  "face_lost_timeout": 3.0,
  "models": {
    "face_detector": {
      "model_path": "models/opencv_face_detector_uint8.pb",
      "config_path": "models/opencv_face_detector.pbtxt",
      "input_width": 320,
      "input_height": 240,
      "confidence_threshold": 0.5,
      "nms_threshold": 0.4
    },
    "feature_extractor": {
      "model_path": "models/mobilefacenet.onnx",
      "input_size": [112, 112],
      "feature_dim": 128
    },
    "liveness_detector": {
      "model_path": "models/liveness_model.onnx",
      "threshold": 0.93
    }
  },
  "video": {
    "display_width": 640,
    "display_height": 480,
    "fps_buffer_size": 16
  },
  "colors": {
    "recognized": [255, 255, 255],
    "stranger": [80, 255, 255],
    "too_tiny": [255, 237, 178],
    "fake": [127, 127, 255],
    "landmarks": [0, 255, 255],
    "legend": [180, 180, 0]
  }
